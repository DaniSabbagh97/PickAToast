<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSingleEvent">


    <TextView
        android:id="@+id/tvNombreOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="34dp"
        android:text="TextView"
        />

    <ImageView
        android:id="@+id/ivImagenOfertaIndividual"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_below="@+id/tvNombreOferta"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/toast_logo" />

    <TextView
        android:id="@+id/tvDuracionOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivImagenOfertaIndividual"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="24dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvRestauranteOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDuracionOferta"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvLocalizacionOferta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvRestauranteOferta"
        android:layout_marginTop="15dp"
        android:textSize="14dp"
        android:text="TextView" />



    <Button
        android:id="@+id/btnApuntarseOferta"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLocalizacionOferta"
        android:layout_marginTop="55dp"
        android:text="Button" />
</RelativeLayout>