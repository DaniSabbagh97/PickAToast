<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/backgroundImage"
    tools:context=".RegristroEmpleado">


    <Button
        android:id="@+id/btnRegistrarEmpleado"
        style="@style/YellowButton"
        android:layout_alignParentBottom="true"
        android:text="@string/btn_registro_uno" />

    <EditText
        android:id="@+id/etVerificarContraseña"
        android:hint="@string/et_verificar_correo"
        android:layout_marginBottom="270dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:textSize="18dp"
        style="@style/loginEditText"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etContraseña"
        android:hint="@string/et_contraseña"
        android:layout_marginBottom="336dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        style="@style/loginEditText"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/etCorreo"
        android:layout_marginBottom="402dp"
        android:layout_width="300dp"
        android:layout_height="45dp"
        style="@style/loginEditText"
        android:hint="@string/tv_correo"/>

    <TextView
        android:id="@+id/tvPaso1"
        android:layout_width="194dp"
        android:layout_height="100dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="470dp"
        android:text="@string/tv_paso_uno"
        android:textSize="36sp"
        style="@style/titleBodoni" />

</RelativeLayout>