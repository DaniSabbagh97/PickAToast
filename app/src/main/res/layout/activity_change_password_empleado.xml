<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordEmpleado">

    <EditText
        android:id="@+id/etCurrentPasswordEmpleado"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="448dp"
        android:ems="10"
        android:hint="Introduce tu actual contraseña"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNuevaContraseñaEmpelado"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="377dp"
        android:ems="10"
        android:hint="Introduce la nueva contraseña"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/etNuevaContraseñaEmpelado2"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="312dp"
        android:ems="10"
        android:hint="Introduce la nueva contraseña"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnChangePasswordEmpleado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:text="Cambiar contraseña" />

</RelativeLayout>