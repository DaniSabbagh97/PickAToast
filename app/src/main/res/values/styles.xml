<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--/CDefault pickAToast colors, not background image (look at style backgroundImage)-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@drawable/background_light</item>-->
        <item name="android:fontFamily">@font/segoui</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="loginEditText">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:alpha">0.5</item>
        <item name="android:background">@drawable/texto_redondo</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/color_font</item>
        <item name="android:fontFamily">@font/segoui</item>
    </style>

    <style name="YellowButton">
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">45dp</item>
        <!--<item name="android:layout_alignParentEnd">true</item>-->
        <!--<item name="android:layout_alignParentBottom">true</item>-->
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginEnd">54dp</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:textSize">20sp</item>
        <item name="elevation">3dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/segoui</item>

    </style>

    <style name="backgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_light</item>
    </style>

    <style name="titleBodoni">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:fontFamily">@font/bodoni</item>
        <!-- Personalize :
        android:layout_width, android:layout_height, android:layout_marginEnd, android:layout_marginBottom , android:textSize-->
    </style>

    <style name="icons_buttons">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="menu_icons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="menu_options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/cream</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
       <item name="android:fontFamily">@font/segoui</item>
    </style>

    <style name="profile_et">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/texto_redondo</item>
        <item name="android:textColorHint">@color/color_font</item>
        <item name="android:alpha">0.5</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="micro_title_event">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:fontFamily">@font/segoui</item>
        <item name="android:textSize">14dp</item>
        <item name="android:alpha">0.8</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="datos_events">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:fontFamily">@font/segoui</item>
        <item name="android:textSize">24dp</item>
        <item name="android:layout_marginBottom">25dp</item>
    </style>

    <style name="title_above">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/bodoni</item>
        <item name="android:textColor">@color/brown</item>
    </style>
</resources>
