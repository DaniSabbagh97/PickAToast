<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--/CDefault pickAToast colors, not background image (look at style backgroundImage)-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowBackground">@drawable/background_light</item>-->
        <item name="android:fontFamily">@font/segoui</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="loginEditText">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@drawable/texto_redondo</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@color/color_textview_font</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="YellowButton">
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginEnd">54dp</item>
        <item name="android:layout_marginBottom">72dp</item>
        <item name="android:background">@drawable/boton_redondo</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/bodoni</item>
    </style>

    <style name="backgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/background_light</item>
    </style>

    <style name="titleBodoni">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_font</item>
        <item name="android:fontFamily">@font/bodoni</item>
        <!-- Personalize :
        android:layout_width, android:layout_height, android:layout_marginEnd, android:layout_marginBottom , android:textSize-->
    </style>
</resources>
